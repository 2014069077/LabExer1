<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.krisha.labexer1.MainActivity">

    <TextView
        android:id="@+id/quiz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz 1"
        android:layout_alignBaseline="@+id/inputquiz1"
        android:layout_alignBottom="@+id/inputquiz1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp" />

    <EditText
        android:id="@+id/inputquiz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:width="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnNext"
        android:layout_marginStart="65dp" />

    <TextView
        android:id="@+id/quiz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/inputquiz2"
        android:layout_alignBottom="@+id/inputquiz2"
        android:layout_alignStart="@+id/quiz1"
        android:text="Quiz 2" />

    <EditText
        android:id="@+id/inputquiz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/inputquiz1"
        android:layout_below="@+id/inputquiz1"
        android:layout_marginTop="19dp"
        android:width="80dp" />

    <TextView
        android:id="@+id/sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/inputseatWork"
        android:layout_alignBottom="@+id/inputseatWork"
        android:layout_alignStart="@+id/quiz2"
        android:text="Seatworks" />

    <EditText
        android:id="@+id/inputseatWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/inputquiz2"
        android:layout_below="@+id/inputquiz2"
        android:layout_marginTop="18dp"
        android:width="80dp" />

    <TextView
        android:id="@+id/labexer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lab Exercises"
        android:layout_alignBaseline="@+id/inputlabexer"
        android:layout_alignBottom="@+id/inputlabexer"
        android:layout_alignStart="@+id/sw" />

    <EditText
        android:id="@+id/inputlabexer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/inputseatWork"
        android:layout_below="@+id/inputseatWork"
        android:layout_marginTop="18dp"
        android:width="80dp" />

    <TextView
        android:id="@+id/majorexam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major Exam"
        android:layout_alignBaseline="@+id/inputmajorExam"
        android:layout_alignBottom="@+id/inputmajorExam"
        android:layout_alignStart="@+id/labexer" />

    <EditText
        android:id="@+id/inputmajorExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/inputlabexer"
        android:layout_alignStart="@+id/inputlabexer"
        android:width="80dp"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:onClick="callSecondActivity"
        android:text="Submit" />

</RelativeLayout>
