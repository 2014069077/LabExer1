<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.krisha.labexer1.SecondActivity">

    <TextView
        android:id="@+id/finalgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Your Final Grade is: "
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/goback"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/rawaverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Your Raw Average is: "
        android:layout_below="@+id/finalgrade"
        android:layout_alignEnd="@+id/finalgrade" />

    <TextView
        android:id="@+id/txt_finalGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/finalgrade"
        android:layout_alignBottom="@+id/finalgrade"
        android:layout_alignStart="@+id/txt_rawAverage" />

    <TextView
        android:id="@+id/txt_rawAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rawaverage"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/rawaverage" />

    <Button
        android:id="@+id/goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rawaverage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Go Back"
        android:onClick="backToMain"/>


</RelativeLayout>
